end
local function clientLoadSim()
    local f=Instance.new("RemoteEvent"); f.Name="GPv9_LoadPing"; f.Parent=RSrv
    for i=1,5 do task.wait(1); pcall(function() f:FireServer("loading_"..i) end) end
    f:Destroy()
end

