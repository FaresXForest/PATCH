    while true do
        task.wait(1); c+=1
        if c%ACTIVITY_TIME==0 then
            pcall(function()
                local root=LP.Character and LP.Character.PrimaryPart
                if root then root.CFrame*=CFrame.Angles(0,math.rad(1),0) end
